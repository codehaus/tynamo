<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
	<t:if test="failureMessage">
		<div class="message">
			<img src="/style/icon_error_sml.gif" style="border:0px;margin-right:20px" alt="error"/> 
			${failureMessage}
		</div>
	</t:if>
	<t:if test="successMessage">
		<div class="message">
			<img src="/style/icon_success_sml.gif" style="border:0px;margin-right:20px" alt="success"/> 
			${successMessage}
		</div>
	</t:if>
</t:container>